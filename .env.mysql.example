# ============================================
# 本地 MySQL 数据库环境变量配置
# ============================================

# ============================================
# 数据库配置
# ============================================
VITE_DB_HOST=localhost
VITE_DB_PORT=3306
VITE_DB_USER=root
VITE_DB_PASSWORD=your_password
VITE_DB_NAME=anheyu_blog

# ============================================
# 数据库类型选择
# ============================================
# local: 使用本地 MySQL
# supabase: 使用 Supabase
VITE_DB_TYPE=local

# ============================================
# 应用配置
# ============================================
VITE_APP_TITLE=安知鱼的博客
VITE_APP_DESCRIPTION=一个分享技术与生活的博客
VITE_API_URL=http://localhost:8848/api

# ============================================
# 部署配置
# ============================================
VITE_PUBLIC_PATH=/
VITE_ROUTER_HISTORY=history
VITE_PORT=8848

# ============================================
# CDN 配置
# ============================================
VITE_CDN=false

# ============================================
# 压缩配置
# ============================================
VITE_COMPRESSION=all

# ============================================
# 可选配置
# ============================================
VITE_DEBUG=false
VITE_APP_KEYWORDS=博客,技术,生活,安知鱼
VITE_APP_AUTHOR=安知鱼
VITE_APP_EMAIL=your-email@example.com

# ============================================
# 文件存储配置
# ============================================
# local: 本地存储
# supabase: Supabase Storage
VITE_STORAGE_TYPE=local
